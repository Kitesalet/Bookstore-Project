@model List<Category>

<div class="card border-0 shadow mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container-fluid pb-2">
            <div class="row d-flex justify-content-center">
                <div class="col p-0 d-flex justify-content-end">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create New Category  <i class="bi bi-plus-circle-fill"></i></a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category cat in Model)
                {
                    <tr>
                        <td>@cat.Name</td>
                        <td>@cat.DisplayOrder</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
