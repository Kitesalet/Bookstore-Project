@model ProductVM

<div class="card border-0 shadow mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                    <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form class="row" method="post" asp-controller="Product" asp-action="Create">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Author" type="text" class="form-control border-0 shadow"/>
                    <label class="" asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Title" class="form-control border-0 shadow" />
                    <label class="" asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label class="" asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price" class="form-control border-0 shadow" />
                    <label class="" asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-primary"></span>
                </div>                
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price50" class="form-control border-0 shadow" />
                    <label class="" asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price100" class="form-control border-0 shadow" />
                    <label class="" asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-primary"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ISBN" class="form-control border-0 shadow" />
                    <label class="" asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-primary"></span>
                </div>
                <div class="row pt-2">
                    <div class="p-0 col-6 col-sm-4 col-md-4">
                        <button class="btn btn-danger form-control" type="submit">Delete</button>
                    </div>
                    <div class="px-2 col-6 col-sm-4 col-md-4">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{


        <partial name="_ValidationScriptsPartial" />    
}